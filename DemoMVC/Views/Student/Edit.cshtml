@model DemoMVC.Models.Student

@{
    ViewData["Title"] = "Edit";
}

<h4>Sua thong tin sinh vien</h4>

<hr />
<div class="row">
    <div class+"col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-action="StudentID" />
            
            <div class="form-group">
                <label asp-for="StudentName" class="control-label"></label>
                <input asp-action="StudentName" class="form-control"> 
                <span asp-validation-for="StudentName" class="text-danger"></span>

            </div>
            <br> 
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary">
                <a class="btn btn-success" asp-action="Index">Danh sach sinh vien</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
